<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:alpha="0.7"
        android:background="@color/blue" />
    <!--<TextView-->
    <!--android:id="@+id/welcomeText"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textColor="#ffffff"-->
    <!--android:text="Hi, Owais Alam"-->
    <!--android:gravity="center"-->
    <!--android:textSize="30dp"-->
    <!--android:layout_marginTop="35dp"-->
    <!--android:fontFamily="sans-serif-condensed"-->
    <!--/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/welcomeText"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:alpha="0.92"
        android:background="@drawable/layout_bg"

        >

        <TextView
            android:id="@+id/smartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Smart Water Quality Solution"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="28dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="20dp"

            >

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_waterLevel"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"

                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/blue"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"

                        android:layout_height="57dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/card_water" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Water Level"
                        android:textColor="@color/offwhite" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_statistics"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/card_view_waterLevel"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/blue"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/card_statistics" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Statistics"
                        android:textColor="@color/offwhite" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_Records"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_below="@id/card_view_waterLevel"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/blue"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/card_records" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Records"
                        android:textColor="@color/offwhite" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_about"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_below="@id/card_view_statistics"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/card_view_Records"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/blue"

                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/card_about" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="About"
                        android:textColor="@color/offwhite" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>